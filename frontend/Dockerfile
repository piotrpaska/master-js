FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install

RUN npm install -g serve

ARG VITE_MASTER_COUNTDOWN_SOCKET_URL
ARG VITE_MASTER_API_SOCKET_URL
ARG VITE_MASTER_API_URL

ENV VITE_MASTER_COUNTDOWN_SOCKET_URL=$VITE_MASTER_COUNTDOWN_SOCKET_URL
ENV VITE_MASTER_API_SOCKET_URL=$VITE_MASTER_API_SOCKET_URL
ENV VITE_MASTER_API_URL=$VITE_MASTER_API_URL

COPY . .

RUN npm run build

EXPOSE 8080

CMD ["serve", "-s", "dist", "-l", "8080"]
